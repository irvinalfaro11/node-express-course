{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
      "rules": {
    "quotes": ["error", "single"],
    // we use 2 spaces to indent our code
    // we want to avoid extraneous spaces
    "consistent-return": 2,
    "indent"           : [1, 2],
    "no-else-return"   : 1,
    "semi"             : [1, "always"],
    "space-unary-ops"  : 2
  }
}
